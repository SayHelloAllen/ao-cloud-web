<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zkh.modules.generator.dao.BaseBannerDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.zkh.modules.generator.entity.BaseBannerEntity" id="baseBannerMap">
        <result property="id" column="id"/>
        <result property="url" column="url"/>
        <result property="sort" column="sort"/>
        <result property="description" column="description"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.zkh.modules.generator.entity.BaseBannerEntity">
		select * from base_banner where id = #{value}
	</select>

	<select id="queryList" resultType="com.zkh.modules.generator.entity.BaseBannerEntity">
		select * from base_banner
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from base_banner 
	</select>
	 
	<insert id="save" parameterType="com.zkh.modules.generator.entity.BaseBannerEntity" useGeneratedKeys="true" keyProperty="id">
		insert into base_banner
		(
			`url`, 
			`sort`, 
			`description`
		)
		values
		(
			#{url}, 
			#{sort}, 
			#{description}
		)
	</insert>
	 
	<update id="update" parameterType="com.zkh.modules.generator.entity.BaseBannerEntity">
		update base_banner 
		<set>
			<if test="url != null">`url` = #{url}, </if>
			<if test="sort != null">`sort` = #{sort}, </if>
			<if test="description != null">`description` = #{description}, </if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from base_banner where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from base_banner where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>