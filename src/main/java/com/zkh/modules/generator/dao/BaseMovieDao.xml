<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zkh.modules.generator.dao.BaseMovieDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.zkh.modules.generator.entity.BaseMovieEntity" id="baseMovieMap">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="tag" column="tag"/>
        <result property="type" column="type"/>
        <result property="url" column="url"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.zkh.modules.generator.entity.BaseMovieEntity">
		select * from base_movie where id = #{value}
	</select>

	<select id="queryList" resultType="com.zkh.modules.generator.entity.BaseMovieEntity">
		select * from base_movie
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from base_movie 
	</select>
	 
	<insert id="save" parameterType="com.zkh.modules.generator.entity.BaseMovieEntity" useGeneratedKeys="true" keyProperty="id">
		insert into base_movie
		(
			`title`, 
			`description`, 
			`tag`, 
			`type`, 
			`url`
		)
		values
		(
			#{title}, 
			#{description}, 
			#{tag}, 
			#{type}, 
			#{url}
		)
	</insert>
	 
	<update id="update" parameterType="com.zkh.modules.generator.entity.BaseMovieEntity">
		update base_movie 
		<set>
			<if test="title != null">`title` = #{title}, </if>
			<if test="description != null">`description` = #{description}, </if>
			<if test="tag != null">`tag` = #{tag}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="url != null">`url` = #{url}, </if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from base_movie where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from base_movie where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>