<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zkh.modules.generator.dao.BaseInfoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.zkh.modules.generator.entity.BaseInfoEntity" id="baseInfoMap">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="sort" column="sort"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.zkh.modules.generator.entity.BaseInfoEntity">
		select * from base_info where id = #{value}
	</select>

	<select id="queryList" resultType="com.zkh.modules.generator.entity.BaseInfoEntity">
		select * from base_info
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from base_info 
	</select>
	 
	<insert id="save" parameterType="com.zkh.modules.generator.entity.BaseInfoEntity" useGeneratedKeys="true" keyProperty="id">
		insert into base_info
		(
			`title`, 
			`description`, 
			`sort`
		)
		values
		(
			#{title}, 
			#{description}, 
			#{sort}
		)
	</insert>
	 
	<update id="update" parameterType="com.zkh.modules.generator.entity.BaseInfoEntity">
		update base_info 
		<set>
			<if test="title != null">`title` = #{title}, </if>
			<if test="description != null">`description` = #{description}, </if>
			<if test="sort != null">`sort` = #{sort}, </if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from base_info where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from base_info where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>